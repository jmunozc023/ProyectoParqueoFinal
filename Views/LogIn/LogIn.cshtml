@model ProyectoParqueoFinal.ViewModels.LogInVM;
@{
	Layout = null;
}

<html style="background-color: blueviolet;">
<head>
	<title>Ingresar</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body style="background-color: blueviolet;">
	<div class="container">
		<div class="row mt-5 justify-content-center" style="background-color: blueviolet;">
			<div class="col-sm-12 col-md-8 col-lg-5">
				<h1 class="text-center">Sistema de Parqueos ULACIT</h1>
				<div class="card">
					<div class="card-header">
						<h3 class="text-center">Inicio de Sesion</h3>
					</div>
					<div class="card-body">
						<form asp-controller="LogIn" asp-action="LogIn" method="post">
							<input class="form-control mb-3" type="email" placeholder="Correo electronico" required asp-for="CorreoElectronico" />
							<input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" />
							<button class="btn btn-primary btn-block" type="submit">Ingresar</button>
							@if (ViewData["Mensaje"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@ViewData["Mensaje"]
								</div>
							}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
